              <script>
                function updateDateTime() {
                  const now = new Date();

                  // Arrays to get the month name
                  const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];

                  // Get the day, month name, and year
                  const day = now.getDate();
                  const month = monthNames[now.getMonth()];
                  const year = now.getFullYear();

                  // Manually build the date string in the "16 August 2025" format
                  const formattedDate = `${day} ${month} ${year}`;

                  // Formats the time to "08:31 PM"
                  const timeOptions = { hour: 'numeric', minute: 'numeric', hour12: true };
                  const formattedTime = now.toLocaleTimeString('en-US', timeOptions);

                  // Places the formatted date and time into your HTML
                  document.getElementById('current-date').textContent = formattedDate;
                  document.getElementById('current-time').textContent = formattedTime;
                }

                // Call the function to display the date and time immediately
                updateDateTime();

                // Optionally, you can update the time every minute to keep it current
                // setInterval(updateDateTime, 60000); 
              </script>
